<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgperfil2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:padding="1dp"
            android:scaleType="centerCrop"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:shapeAppearanceOverlay="@style/Circular"
            app:srcCompat="@drawable/fotoperfilluis"
            tools:srcCompat="@drawable/fotoperfilluis" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="#000000"
            android:backgroundTint="#000000"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button6"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="48dp"
                android:layout_toLeftOf="@id/imageView2"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="add"
                android:checkable="false"
                android:clickable="false"
                android:fallbackLineSpacing="false"
                android:hapticFeedbackEnabled="false"
                app:cornerRadius="40dp"
                app:icon="@drawable/historia"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="25dp"
                app:iconTint="#FFFFFF"
                app:iconTintMode="src_atop" />

            <Button
                android:id="@+id/button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_toLeftOf="@id/imageView2"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="add"
                android:checkable="false"
                android:clickable="false"
                android:fallbackLineSpacing="false"
                android:hapticFeedbackEnabled="false"
                app:cornerRadius="40dp"
                app:icon="@drawable/menu"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="25dp"
                app:iconTint="#FFFFFF"
                app:iconTintMode="src_atop" />

            <Button
                android:id="@+id/button7"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/imageView2"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="add"
                android:checkable="false"
                android:clickable="false"
                android:fallbackLineSpacing="false"
                android:hapticFeedbackEnabled="false"
                app:cornerRadius="40dp"
                app:icon="@drawable/user"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="25dp"
                app:iconTint="#FFFFFF"
                app:iconTintMode="src_atop" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif-medium"
                android:text="LuisAvila0720"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:text="Seguidores"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="88dp"
            android:layout_height="27dp"
            android:layout_marginStart="5dp"
            android:text="Publicaio..."
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imgperfil2"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="83dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:text="Seguidos "
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:text="12"
            android:textColor="#FAFAFA"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/imgperfil2"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="73dp"
            android:layout_marginTop="49dp"
            android:text="5"
            android:textColor="#FAFAFA"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="48dp"
            android:text="18"
            android:textColor="#FAFAFA"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="414dp"
            android:layout_height="522dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Publicaciones"
            android:textColor="#FBFBFB"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgperfil2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>